@model IEnumerable<EFCoreTesting.Models.Address>

@{
    ViewData["Title"] = "ListAddresses";
}

<h1>ListAddresses</h1>


<table class="table table-striped table-sm">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Country
                </td>
                <td>
                    @item.City
                </td>
            </tr>
            @if (@item.Users != null)
            {
                <tr class="table-dark">
                    <td>Имя</td>
                    <td>Фамилия</td>
                    <td>Возраст</td>
                </tr>
                @foreach (var user in @item.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Age</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
